#! /bin/bash

# install the dot files

export PATH=/bin:/sbin:/usr/bin:/usr/local/bin:/usr/sbin

echo "trying to install all of my dotfiles...."

# make it idempotent!!!

# bash
cp bash_aliases ~/.bash_aliases

# zsh stuff
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --unattended
cp zshrc ~/.zshrc
cp jkblinks.zsh-theme ~/.oh-my-zsh/themes/.
git clone https://github.com/zsh-users/zsh-autosuggestions ~/.oh-my-zsh/custom/plugins/zsh-autosuggestions

# python
cp pythonrc ~/.pythonrc

# mutt
mkdir -p ~/mdir/tmp
cp muttrc ~/.muttrc

stuff="zsh zsh-syntax-highlighting i3 tmux screen rsync git "\
"ssh-askpass vim mutt vim extra-vim-stuff enscript"

echo "============================================="
echo "stuff you probably want installed:"
echo $stuff
echo "============================================="
echo "sudo apt-get install $stuff"
echo "============================================="
